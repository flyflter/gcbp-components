{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@gcbp/eslint-config-vue": "^1.0.0-alpha.14",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "bootstrap": "yarn install",
    "version:auto": "lerna version --conventional-commits",
    "publish:auto": "lerna publish from-package",
    "clean": "lerna clean && rm -rf node_modules",
    "prepare": "husky install",
    "lint": "eslint . --ext js,ts,tsx,vue --fix",
    "build": "npm run build:pkg",
    "build:pkg": "lerna run --stream --sort build",
    "build:gcpf": "lerna run --scope @gcbp/gcp-forms build --stream",
    "start:wf-story": "lerna run --scope @gcbp/web-framework storybook --stream",
    "build:wf-story": "lerna run --scope @gcbp/web-framework build-storybook --stream",
    "start:wf": "lerna run --scope @gcbp/web-framework dev --stream",
    "build:wf": "lerna run --scope @gcbp/web-framework build --stream",
    "start:wt": "lerna run --scope web-templates dev --stream",
    "build:wt": "lerna run --scope web-templates build --stream"
  },
  "workspaces": [
    "packages/*"
  ]
}